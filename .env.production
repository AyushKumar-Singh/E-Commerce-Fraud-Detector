# Production Environment Variables
# NEVER commit actual secrets - use secret management service

# Database
POSTGRES_DB=frauddb_prod
POSTGRES_USER=fraud_user
POSTGRES_PASSWORD=<use-secrets-manager>
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://fraud_user:<password>@db:5432/frauddb_prod

# Redis
REDIS_PASSWORD=<use-secrets-manager>
REDIS_URL=redis://:<password>@redis:6379/0

# API Security
API_TOKEN=<generate-secure-token>
JWT_SECRET=<generate-secure-secret>
ADMIN_SECRET=<generate-secure-secret>

# Model Configuration
MODEL_PATH=/app/models
REVIEW_THR=0.65
TX_THR=0.50

# Application
FLASK_ENV=production
FLASK_DEBUG=false
LOG_LEVEL=INFO
VERSION=1.0.0

# Gunicorn
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# Monitoring
GRAFANA_PASSWORD=<use-secrets-manager>

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://:<password>@redis:6379/1

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=<use-secrets-manager>
ALERT_EMAIL=admin@yourdomain.com